

<div class="row">
  <aside class="col-md-3">
    <%= render 'shared/user_profile' if current_user != nil %>
  </aside>
  
  <div class="col-md-9">
    <% @categories.each do |category| %>
      <div class="card">

    
      <div class= "row">
        <div class="col-md-6">
            <div class="category-name"> <%= category.name %> </div> 
            <div class="category-words-container word" > 
              <% category.words.all.each do |word| %>
                <span > <%= word.content  %> </span>

              <% end %> 
            </div>
            <%= link_to "Create Lesson", user_lessons_path(current_user, :lesson => {:category_id => category.id, :user_id => current_user.id}), method: :post, 
            class: "btn" if current_user != nil %>
        </div>


        <div class="col-md-6">
          
        </div>

      </div>



      </div>
    <% end %>
  </div>

</div>